  <script>
    // Fungsi untuk memaparkan pratonton gambar dan memulakan proses OCR
    document.getElementById('image').addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = function() {
        // Papar gambar di <img id="preview">
        const preview = document.getElementById('preview');
        preview.src = reader.result;
        document.getElementById('imageContainer').style.display = 'block';

        // Selepas gambar dipaparkan, jalankan OCR dengan Tesseract.js
        performOCR(reader.result);
      }
      reader.readAsDataURL(file);
    });

    // Fungsi untuk buka gambar dalam tab baru apabila diklik
    function zoomImage(img) {
      const win = window.open();
      win.document.write('<img src="' + img.src + '" style="width:100%">');
    }

    // Isi nilai timestamp (tarikh & masa semasa) secara automatik
    const timestampInput = document.getElementById('timestamp');
    const now = new Date();
    // Format: DD/MM/YYYY HH:MM:SS (dalam huruf besar)
    const formatted = now.toLocaleDateString().toUpperCase() + " " + now.toLocaleTimeString().toUpperCase();
    timestampInput.value = formatted;

    // Kod untuk memaparkan atau sembunyikan field tambahan kategori
    const remarkSelect = document.getElementById('remark');
    const otherField = document.getElementById('otherCategory');
    const unitField = document.getElementById('unitNumber');

    remarkSelect.addEventListener('change', function() {
      const value = this.value;
      otherField.style.display = (value === 'OTHER') ? 'block' : 'none';
      unitField.style.display = (value === 'OWNER' || value === 'TENANT') ? 'block' : 'none';
      if (value !== 'OTHER') otherField.value = '';
      if (value !== 'OWNER' && value !== 'TENANT') unitField.value = '';
    });

    // Apabila pengguna menaip nombor telefon, butang "Call This Number" akan muncul jika panjang input >= 9 aksara
    function updateCallLink() {
      const phone = document.getElementById('contact').value.trim();
      const link = document.getElementById('callLink');
      if (phone.length >= 9) {
        link.href = 'tel:' + phone;
        link.style.display = 'block';
      } else {
        link.style.display = 'none';
      }
    }

    // Validasi sebelum form diserahkan
    document.getElementById('registrationForm').addEventListener('submit', function(e) {
      const remark = remarkSelect.value;
      const other = otherField.value.trim();
      const unit = unitField.value.trim();
      if (remark === 'OTHER' && other === '') {
        alert('Please specify the other category.');
        e.preventDefault();
        return;
      }
      if ((remark === 'OWNER' || remark === 'TENANT') && unit === '') {
        alert('Please enter the unit number.');
        e.preventDefault();
        return;
      }
    });

    // =====================================================================
    // Fungsi utama untuk melaksanakan OCR pada imej MyKad menggunakan Tesseract.js
    // =====================================================================
    function performOCR(dataURL) {
      // Tetapkan medan yang hendak diisi secara automatik
      const nameInput = document.getElementById('name');
      const mykadInput = document.getElementById('mykad');

      // Paparkan teks medan sebagai “Analisis...” sembari tunggu hasil OCR
      nameInput.value = 'ANALISIS OCR...';
      mykadInput.value = 'ANALISIS OCR...';

      // Panggil Tesseract untuk kenali teks daripada gambar
      Tesseract.recognize(
        dataURL,
        'eng', // Bahasa: gunakan 'eng' untuk English; anda boleh tambah 'msa' jika mahu sokong Malay (bergantung pada sokongan modelnya)
        {
          logger: m => {
            // Boleh semak progres di konsol (optional)
            console.log(m);
          }
        }
      ).then(({ data: { text } }) => {
        // text ialah keseluruhan teks yang dikenal pasti oleh OCR
        console.log('Hasil OCR:', text);

        // CUBA cari pola nombor MyKad di dalam teks
        // Format tipikal MyKad: 6 angka – 2 angka – 4 angka (cth: "811008-14-5678")
        const mykadPattern = /(\d{6}-\d{2}-\d{4})/;
        const mykadMatch = text.match(mykadPattern);

        if (mykadMatch) {
          mykadInput.value = mykadMatch[1];
        } else {
          mykadInput.value = 'TIDAK DIKESAN';
        }

        // Untuk nama, umumnya nama di MyKad diletakkan di atas atau bawah nombor kad.
        // Di sini kita cuba dapatkan baris teks yang terletak sebelum/selepas nombor MyKad.
        // Pendekatan mudah: Pisahkan teks kepada baris, cari baris yang mengandungi nombor MyKad, lalu ambil baris di atasnya/di bawahnya.
        const lines = text.split('\n').map(l => l.trim()).filter(l => l.length > 0);
        let detectedName = '';

        if (mykadMatch) {
          // Cari indeks baris yang ada nombor MyKad
          const idx = lines.findIndex(line => line.includes(mykadMatch[1]));
          // Cuba anggap nama adalah baris sebelum nombor MyKad
          if (idx > 0) {
            detectedName = lines[idx - 1];
          }
          // Jika tiada, cuba baris selepas nombor
          if (!detectedName && idx >= 0 && idx < lines.length - 1) {
            detectedName = lines[idx + 1];
          }
        }

        // Jika tiada hasil, tandakan sebagai “TIDAK DIKESAN”
        if (detectedName) {
          nameInput.value = detectedName.toUpperCase();
        } else {
          nameInput.value = 'TIDAK DIKESAN';
        }
      }).catch(err => {
        console.error('Ralat OCR:', err);
        nameInput.value = 'RALAT';
        mykadInput.value = 'RALAT';
      });
    }
  </script>
</body>
</html>
